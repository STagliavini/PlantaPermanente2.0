<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".empleados.empleado_enviar_mail"
    tools:showIn="@layout/activity_empleado_enviar_mail"
    android:orientation="vertical">
    <EditText
        android:id="@+id/mAsunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/ic_assignment_black_24dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:hint="Asunto"
        android:inputType="textPersonName"
        android:paddingLeft="5dp" />
    <EditText
        android:id="@+id/mMensaje"
        android:drawableLeft="@drawable/ic_assignment_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:hint="Mensaje"
        android:paddingLeft="5dp"
        android:inputType="text|textImeMultiLine"/>
    <Button
        android:id="@+id/btnmEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="#1976d2"
        android:text="Abrir Email"
        android:textColor="#FFF"
        android:textSize="18sp" />

</LinearLayout>